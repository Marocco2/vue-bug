---
export interface Props {
	heroImage?: {
			src: string;
			alt: string;
		};
	title: string;
	description: string;
	publishDate: string;
	url: string;
}

const {heroImage, title, description, publishDate, url } = Astro.props as Props;
import { Image } from '@astrojs/image/components';

---

<article class="post-preview">
	<ul class="post">
		<header>
			{heroImage && (
				<li><a href={url}>
				<Image 
					class="hero-image"
					format='webp'
					quality={90}
					loading="eager"
					fit="cover"
					position="entropy"
					src={heroImage.src}
					alt={heroImage.alt}
					width={700}
					height={500}
				/>
			</a>
				</li>
			)}		
		</header>
		<li>
			<time>{publishDate}</time>
			<a href={url}><h1 class="title">{title}</h1></a>
			<p>{description}</p>
		</li>
	</ul>
</article>


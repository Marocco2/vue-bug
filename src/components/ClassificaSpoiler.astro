---
export interface Props {
	champ: string;
	href: string;
}

const { champ, href } = Astro.props as Props;
---

<div class="champ-spoiler">
    <a href="#hide" class="hide btn" id="hide">{champ}</a>
    <a href="#show" class="show btn" id="show">{champ}</a>
    <div class="spoiler">
      <p class="spoiler-content">People die when they are killed!</p>
    </div>
</div>
<style>
.spoiler {
  display: none;
}

.show {
  display: none; 
}

.hide:target + .show {
  display: inline; 
}

.hide:target {
  display: none; 
}

.hide:target ~ .spoiler {
  display: inline;
}

.champ-spoiler {
  padding: 20px;
  background-color: var(--theme-code-inline-bg);
}

.spoiler-content {
  padding: 15px;
  -webkit-animation: slide-in-top 0.6s cubic-bezier(0.215, 0.610, 0.355, 1.000) both;
	        animation: slide-in-top 0.6s cubic-bezier(0.215, 0.610, 0.355, 1.000) both;
}

